<Window x:Class="POP_SF42_2016_GUI.UI.StavkeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF42_2016_GUI.UI"
        mc:Ignorable="d"
        Title="StavkeWindow" Height="454.95" Width="620" Foreground="White" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF0066CC">
        <DataGrid x:Name="dgNamestaj" AutoGenerateColumns="True" ItemsSource="{Binding Source=NamestajProdaja}" CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single" CanUserReorderColumns="True" ColumnWidth="*" HorizontalAlignment="Left" Height="167" Margin="60,191,0,0" VerticalAlignment="Top" Width="471" AutoGeneratingColumn="dgNamestaj_AutoGeneratingColumn" />
        <Label Content="Izaberite namestaj:" HorizontalAlignment="Left" Height="31" Margin="60,155,0,0" VerticalAlignment="Top" Width="147" FontSize="16" Foreground="White"/>
        <Label Content="Kolicina:" HorizontalAlignment="Left" Height="28" Margin="130,57,0,0" VerticalAlignment="Top" Width="77" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbKolicina" VerticalContentAlignment="Center" Text="{Binding Path=Kolicina}" HorizontalAlignment="Left" Height="28" Margin="213,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78"/>
        <Label Content="Usliga:" HorizontalAlignment="Left" Height="32" Margin="136,104,0,0" VerticalAlignment="Top" Width="77" FontSize="16" Foreground="White"/>
        <ComboBox x:Name="cbUsluga" SelectedItem="{Binding Path=DodatneUsluge}" HorizontalAlignment="Left" Height="22" Margin="213,114,0,0" VerticalAlignment="Top" Width="149" RenderTransformOrigin="0.362,1.273"/>
        <Button x:Name="btnPotvrdi" Content="Potvrdi" HorizontalAlignment="Left" Height="34" Margin="173,380,0,0" VerticalAlignment="Top" Width="117" IsDefault="True" Click="PotvrdiUslugu"/>
        <Button Content="Odustani" HorizontalAlignment="Left" Height="34" Margin="319,380,0,0" VerticalAlignment="Top" Width="118" IsCancel="True"/>

    </Grid>
</Window>
